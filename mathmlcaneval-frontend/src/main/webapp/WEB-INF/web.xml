        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/pages/parts/header.jsp</include-prelude>
            <include-coda>/pages/parts/footer.jsp</include-coda>
        </jsp-property-group>
    </jsp-config>-->
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
